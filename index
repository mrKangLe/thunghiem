<div class="cart-popup" id="cart-popup">
  <div class="cart-header">
    <h2>ğŸ›’ Giá» hÃ ng</h2>
    <button class="close-btn" onclick="toggleCartPopup('hide')">ÄÃ³ng âŒ</button>
  </div>
  <div id="cart-items"></div>
  <p><strong>Tá»•ng:</strong> <span id="cart-total">0Ä‘</span></p>
  <button class="btn" onclick="sendOrder()">ğŸ“© Gá»­i Ä‘Æ¡n hÃ ng</button>
</div>

<script>
let cart = [];

function addToCart(i) {
  const select = document.getElementById("size" + i);
  const label = select.options[select.selectedIndex].text;
  const price = parseInt(select.value);
  cart.push({ name: "Yáº¿n chÆ°ng " + i, label, price });
  showAddPopup();
  updateCartCount();
  renderCart();
}



function renderCart() {
  const area = document.getElementById("cart-items");
  const totalText = document.getElementById("cart-total");
  area.innerHTML = "";
  let total = 0;

  const grouped = {};
  cart.forEach((item) => {
    const key = item.name + " â€“ " + item.label;
    if (!grouped[key]) {
      grouped[key] = { ...item, quantity: 1 };
    } else {
      grouped[key].quantity++;
    }
  });

  let index = 1;
  for (const key in grouped) {
    const item = grouped[key];
    const subtotal = item.price * item.quantity;
    area.innerHTML += `
      <div class="cart-item">
        ${index++}. ${key} â€“ ${item.price}.000Ä‘<br>
        <button onclick="changeQty('${key}', -1)" style="margin:4px;">â–</button>
        x ${item.quantity}
        <button onclick="changeQty('${key}', 1)" style="margin:4px;">â•</button>
        <span style="float:right;"><strong>${subtotal}.000Ä‘</strong></span>
      </div>
    `;
    total += subtotal;
  }

  totalText.innerText = total + ".000Ä‘";
}

function changeQty(key, delta) {
  if (delta > 0) {
    const item = cart.find(item => item.name + " â€“ " + item.label === key);
    cart.push({ ...item });
  } else {
    const idx = cart.findIndex(item => item.name + " â€“ " + item.label === key);
    if (idx !== -1) cart.splice(idx, 1);
  }
  renderCart();
  updateCartCount();
}


function sendOrder() {
  const name = prompt("Nháº­p tÃªn cá»§a báº¡n:");
  const phone = prompt("Sá»‘ Ä‘iá»‡n thoáº¡i:");
  if (!name || !phone) return alert("Vui lÃ²ng nháº­p Ä‘áº§y Ä‘á»§ thÃ´ng tin");

  let detail = "";
  let total = 0;
  cart.forEach((item, i) => {
    detail += `${i+1}. ${item.name} â€“ ${item.label} (${item.price}.000Ä‘)\n`;
    total += item.price;
  });

  fetch("https://script.google.com/macros/s/NEW_WEBHOOK_URL/exec", {
    method: "POST",
    body: JSON.stringify({
      name: name,
      phone: phone,
      size: "TÃ¹y chá»n",
      total: total,
      details: detail
    }),
    headers: { "Content-Type": "application/json" }
  }).then(res => {
    if (res.ok) {
      alert("âœ… ÄÃ£ gá»­i Ä‘Æ¡n!");
      cart = []; renderCart(); updateCartCount(); toggleCartPopup("hide");
    } else {
      alert("âŒ Lá»—i gá»­i Ä‘Æ¡n, thá»­ láº¡i sau.");
    }
  });
}

function showPopup(i) {
  document.getElementById("popup" + i).style.display = "block";
}
function hidePopup(i) {
  document.getElementById("popup" + i).style.display = "none";
}


function toggleCartPopup(force) {
  const popup = document.getElementById("cart-popup");
  if (force === "show") popup.style.display = "block";
  else if (force === "hide") popup.style.display = "none";
  else popup.style.display = popup.style.display === "block" ? "none" : "block";
}


function addCombo(indexes, sizes) {
  indexes.forEach((i, idx) => {
    const selectId = "size" + i;
    const select = document.getElementById(selectId);
    if (!select) return;
    const options = select.options;
    for (let j = 0; j < options.length; j++) {
      if (options[j].text.includes(sizes[idx] + "ml")) {
        select.selectedIndex = j;
        break;
      }
    }
    addToCart(i);
  });
  toggleCartPopup('show');
}

</script>

